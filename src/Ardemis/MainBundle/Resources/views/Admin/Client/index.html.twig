{% extends 'ArdemisMainBundle::base_sass.html.twig' %}

{% block title %}
    {{ parent() }} - {{ 'views.index.list'|trans({'%entity%': 'Clients/Prospect'}, 'ArdemisMainBundle') }}
{% endblock %}

{% block content -%}
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>{{ 'views.index.list'|trans({'%entity%': 'Clients/Prospect'}, 'ArdemisMainBundle') }}</h3>
            </div>

            <table class="table table-striped table-bordered table-condensed table-responsive">
                <thead>
                <tr>
                    <th{% if entities.isSorted('a.Id') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Id', 'a.id') }}</th>
                    <th{% if entities.isSorted('a.Companyname') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'views.form.label.companyname'|trans({}, 'ArdemisMainBundle'), 'a.companyName') }}</th>
                    <th{% if entities.isSorted('a.Zipcode') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'views.form.label.zipcode'|trans({}, 'ArdemisMainBundle'), 'a.zipcode') }}</th>
                    <th{% if entities.isSorted('a.City') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'views.form.label.city'|trans({}, 'ArdemisMainBundle'), 'a.city') }}</th>
                    <th{% if entities.isSorted('a.Activity') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'views.form.label.activity'|trans({}, 'ArdemisMainBundle'), 'a.activity') }}</th>
                    <th{% if entities.isSorted('a.Address') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'views.form.label.address'|trans({}, 'ArdemisMainBundle'), 'a.address') }}</th>
                    <th{% if entities.isSorted('a.Updated') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'views.form.label.updated'|trans({}, 'ArdemisMainBundle'), 'a.updated') }}</th>
                    <th{% if entities.isSorted('a.File') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'views.form.label.file'|trans({}, 'ArdemisMainBundle'), 'a.file') }}</th>
                    <th>{{ 'views.index.actions'|trans({}, 'ArdemisMainBundle') }}</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('client_show', {'id': entity.id}) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.companyname }}</td>
                        <td>{{ entity.zipcode }}</td>
                        <td>{{ entity.city }}</td>
                        <td>{{ entity.activity }}</td>
                        <td>{{ entity.address }}</td>
                        <td>{{ entity.updated }}</td>
                        <td>{{ entity.file }}</td>
                        <td>


                            <a class="glyphicon glyphicon-search tooltips"
                               href="{{ path('client_show', { 'id': entity.id }) }}" title="" rel="tooltip"
                               data-original-title="{{ 'views.actions.show'|trans({}, 'ArdemisMainBundle') }}">

                            </a>


                            <a class="glyphicon glyphicon-edit tooltips"
                               href="{{ path('client_edit', { 'id': entity.id }) }}" title="" rel="tooltip"
                               data-original-title="{{ 'views.actions.edit'|trans({}, 'ArdemisMainBundle') }}">

                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="col-lg4 navigation">
            {{ knp_pagination_render(entities) }}
        </div>

        <div class="col-lg-8">
            <a class="btn btn-primary likepaginator" href="{{ path('client_new') }}">
                {{ 'views.index.createnew'|trans({}, 'ArdemisMainBundle') }} client
            </a>
        </div>
    </div>
{% endblock %}

{% extends 'ArdemisMainBundle::base_sass.html.twig' %}

{% block title %}
    {{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Agency'}, 'ArdemisMainBundle') }}
{% endblock %}

{% block content %}

    <div class="well well-lg">
        <h1>{%trans%}Agency{%endtrans%}</h1>

        <form class="form-horizontal">
            <fieldset>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.name'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.name }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.twittercount'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.twitterCount }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.facebookcount'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.facebookCount }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.linkedincount'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.linkedinCount }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.clientcount'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.clientCount }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.jobcount'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.jobCount }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.profilcount'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.profilCount }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.talkcount'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.talkCount }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.collaboratorcount'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.collaboratorCount }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.agencycount'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.agencyCount }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.hourstalkcount'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.hourstalkCount }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.hoursphonecount'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.hoursphoneCount }}</span></div>
                </div>
            </fieldset>
        </form>
    </div>

    <div class="col-lg-9">
        <div class="float-left col-lg-3">
            <a class="btn btn-info col-lg-11" href="{{ path('agency') }}">
                {{ 'views.recordactions.backtothelist'|trans({}, 'ArdemisMainBundle') }}
            </a>
        </div>
        <div class="float-left col-lg-3">
            <a class="btn btn-primary col-lg-11" href="{{ path('agency_edit', { 'id': entity.id }) }}">
                {{ 'views.recordactions.edit'|trans({}, 'ArdemisMainBundle') }}
            </a>
        </div>
        <div class="float-left col-lg-3">{{ form(delete_form) }}</div>
    </div>
{% endblock %}

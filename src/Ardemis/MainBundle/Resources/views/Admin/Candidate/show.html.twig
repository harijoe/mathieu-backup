{% extends 'ArdemisMainBundle::base_sass.html.twig' %}

{% block title %}
    {{ parent() }} - {{ 'views.show.show'|trans({'%entity%': entity}, 'ArdemisMainBundle') }}
{% endblock %}

{% block content %}
    
    <div class="well well-lg">
        <h1>Candidat</h1>

        <form class="form-horizontal">
            <fieldset>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.lastname'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.lastname }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.firstname'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.firstname }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.address'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.address }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.zipcode'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.zipcode }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.city'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.city }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.region'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.region }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.email'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.email }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.disponibility'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.disponibility|trans({}, 'ArdemisMainBundle') }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.disponibility_negociable'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.disponibilityNegociable }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.experience'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.experience|trans({}, 'ArdemisMainBundle') }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.mobility'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.mobility|trans({}, 'ArdemisMainBundle') }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.mobility_complement'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.mobilityComplement }}</span></div>
                </div>
                <div class="form-group">

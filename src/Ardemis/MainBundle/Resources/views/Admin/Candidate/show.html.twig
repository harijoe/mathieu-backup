                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.income'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.income|trans({}, 'ArdemisMainBundle') }}</span></div>
                </div>

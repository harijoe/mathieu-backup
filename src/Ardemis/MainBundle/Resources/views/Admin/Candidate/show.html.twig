                    <label class="control-label">{{ 'views.form.label.handicap'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.handicap }}</span></div>
                </div>#}

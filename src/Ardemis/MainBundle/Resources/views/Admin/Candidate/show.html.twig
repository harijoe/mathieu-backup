                    <label class="control-label">{{ 'views.form.label.joboffer'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.jobOffer }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.cv'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.cv }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{ 'views.form.label.motivation'|trans({}, 'ArdemisMainBundle') }}</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.motivation }}</span></div>
                </div>
            </fieldset>
        </form>
    </div>

    <div class="col-lg-9">
        <div class="float-left col-lg-3">
            <a class="btn btn-info col-lg-11" href="{{ path('candidate') }}">
                {{ 'views.recordactions.backtothelist'|trans({}, 'ArdemisMainBundle') }}
            </a>
        </div>
        <div class="float-left col-lg-3">
            <a class="btn btn-primary col-lg-11" href="{{ path('candidate_edit', { 'id': entity.id }) }}">
                {{ 'views.recordactions.edit'|trans({}, 'ArdemisMainBundle') }}
            </a>
        </div>
        <div class="float-left col-lg-3">{{ form(delete_form) }}</div>

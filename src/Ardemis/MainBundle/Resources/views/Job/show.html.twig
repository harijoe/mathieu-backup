{% extends 'MWSimpleCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Job'}, 'MWSimpleCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

    <div class="well well-lg">
        <h1>Job</h1>

        <form class="form-horizontal">
            <fieldset>
                <div class="form-group">
                    <label class="control-label">Id</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.id }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">Createdat</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.createdAt|date('Y-m-d H:i:s') }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Publishedat</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.publishedAt|date('Y-m-d H:i:s') }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Published</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.published }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Startat</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.startAt|date('Y-m-d H:i:s') }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Expireat</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.expireAt|date('Y-m-d H:i:s') }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Title</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.title }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Job</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.job }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">Type</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.type }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">Income</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.income }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Technologies</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.technologies }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">Grade</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.grade }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Position</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.position }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Location</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.location }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Summary</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.summary }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Description</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.description }}</span></div>
                </div>
            </fieldset>
        </form>
    </div>

    <div class="col-lg-9">
        <div class="float-left col-lg-3">
            <a class="btn btn-info col-lg-11" href="{{ path('offres') }}">
                {{ 'views.recordactions.backtothelist'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
            </a>
        </div>
        <div class="float-left col-lg-3">
            <a class="btn btn-primary col-lg-11" href="{{ path('offres_edit', { 'id': entity.id }) }}">
                {{ 'views.recordactions.edit'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
            </a>
        </div>
        <div class="float-left col-lg-3">{{ form(delete_form) }}</div>
    </div>
{% endblock %}

{% extends 'MWSimpleCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - {{ 'views.index.list'|trans({'%entity%': 'Job'}, 'MWSimpleCrudGeneratorBundle') }}
{% endblock %}

{% block page %}
    <div class="row">
        <div class="col-lg-2">
            {% if filterForm.vars.errors|length > 0 %}
                <div class="alert alert-block alert-danger fade in form-errors">
                    {{ form_errors(filterForm) }}
                </div>
            {% endif %}
            &nbsp;
        </div>
        <div class="col-lg-12">
            <div class="filters-right">
                <a class="btn btn-primary dropdown-toggle" data-toggle="collapse" data-target="#filters">
                    {{ 'views.index.filters'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
                    <span class="caret"></span>
                </a>
            </div>
        </div>

        <div class="col-lg-12">
            <div id="filters" class="well collapse">
                <div class="form-group">
                    {{ form(filterForm) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>{{ 'views.index.list'|trans({'%entity%': 'Job'}, 'MWSimpleCrudGeneratorBundle') }}</h3></div>

            <table class="table table-striped table-bordered table-condensed table-responsive">
                <thead>
                <tr>
                    <th{% if entities.isSorted('a.Id') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Id', 'a.id') }}</th>
                    <th{% if entities.isSorted('a.Createdat') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Createdat', 'a.createdAt') }}</th>
                    <th{% if entities.isSorted('a.Publishedat') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Publishedat', 'a.publishedAt') }}</th>
                    <th{% if entities.isSorted('a.Published') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Published', 'a.published') }}</th>
                    <th{% if entities.isSorted('a.Startat') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Startat', 'a.startAt') }}</th>
                    <th{% if entities.isSorted('a.Expireat') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Expireat', 'a.expireAt') }}</th>
                    <th{% if entities.isSorted('a.Title') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Title', 'a.title') }}</th>
                    <th{% if entities.isSorted('a.Job') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Job', 'a.job') }}</th>
                    <th{% if entities.isSorted('a.Type') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Type', 'a.type') }}</th>
                    <th{% if entities.isSorted('a.Income') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Income', 'a.income') }}</th>
                    <th{% if entities.isSorted('a.Technologies') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Technologies', 'a.technologies') }}</th>
                    <th{% if entities.isSorted('a.Grade') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Grade', 'a.grade') }}</th>
                    <th{% if entities.isSorted('a.Position') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Position', 'a.position') }}</th>
                    <th{% if entities.isSorted('a.Location') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Location', 'a.location') }}</th>
                    <th{% if entities.isSorted('a.Summary') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Summary', 'a.summary') }}</th>
                    <th{% if entities.isSorted('a.Description') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Description', 'a.description') }}</th>
                    <th>{{ 'views.index.actions'|trans({}, 'MWSimpleCrudGeneratorBundle') }}</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('offres_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if entity.publishedAt %}{{ entity.publishedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.published }}</td>
                        <td>{% if entity.startAt %}{{ entity.startAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if entity.expireAt %}{{ entity.expireAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.title }}</td>
                        <td>{{ entity.job }}</td>
                        <td>{{ entity.type }}</td>
                        <td>{{ entity.income }}</td>
                        <td>{{ entity.technologies }}</td>
                        <td>{{ entity.grade }}</td>
                        <td>{{ entity.position }}</td>
                        <td>{{ entity.location }}</td>
                        <td>{{ entity.summary }}</td>
                        <td>{{ entity.description }}</td>
                        <td>


                            <a class="glyphicon glyphicon-search tooltips"
                               href="{{ path('offres_show', { 'id': entity.id }) }}" title="" rel="tooltip"
                               data-original-title="{{ 'views.actions.show'|trans({}, 'MWSimpleCrudGeneratorBundle') }}">

                            </a>


                            <a class="glyphicon glyphicon-edit tooltips"
                               href="{{ path('offres_edit', { 'id': entity.id }) }}" title="" rel="tooltip"
                               data-original-title="{{ 'views.actions.edit'|trans({}, 'MWSimpleCrudGeneratorBundle') }}">

                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="col-lg-4 navigation">
            {{ knp_pagination_render(entities) }}
        </div>

        <div class="col-lg-8">
            <a class="btn btn-primary likepaginator" href="{{ path('offres_new') }}">
                {{ 'views.index.createnew'|trans({}, 'MWSimpleCrudGeneratorBundle') }} Job
            </a>
        </div>
    </div>

{% endblock %}


{% block javascript %}
    <script type="text/javascript">
        $('.tooltips').tooltip();
    </script>
{% endblock %}
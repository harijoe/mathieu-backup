{% extends 'MWSimpleCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.index.list'|trans({'%entity%': 'Site'}, 'MWSimpleCrudGeneratorBundle') }}
{% endblock %}

{% block page %}
<div class="row">
    <div class="col-lg-2">
        {% if filterForm.vars.errors|length > 0 %}
        <div class="alert alert-block alert-danger fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
        {% endif %}
        &nbsp;
    </div>
    <div class="col-lg-12">
        <div class="filters-right">
            <a class="btn btn-primary dropdown-toggle" data-toggle="collapse" data-target="#filters">
                {{ 'views.index.filters'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
                <span class="caret"></span>
            </a>
        </div>
    </div>
    
    <div class="col-lg-12">
        <div id="filters" class="well collapse">
            <div class="form-group">
            {{ form(filterForm) }}
            </div>
        </div>
    </div>
    </div>
    <div class="row">
    <div class="panel panel-default">
    <div class="panel-heading"><h3>{{ 'views.index.list'|trans({'%entity%': 'Site'}, 'MWSimpleCrudGeneratorBundle') }}</h3></div>    
   
        <table class="table table-striped table-bordered table-condensed table-responsive">
            <thead>
                <tr>
                    <th{% if entities.isSorted('a.Id') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Id', 'a.id') }}</th>
                    <th{% if entities.isSorted('a.Name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Name', 'a.name') }}</th>
                    <th{% if entities.isSorted('a.Contactemail') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Contactemail', 'a.contactEmail') }}</th>
                    <th{% if entities.isSorted('a.Twitterlink') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Twitterlink', 'a.twitterLink') }}</th>
                    <th{% if entities.isSorted('a.Facebooklink') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Facebooklink', 'a.facebookLink') }}</th>
                    <th{% if entities.isSorted('a.Linkedinlink') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Linkedinlink', 'a.linkedinLink') }}</th>
                    <th{% if entities.isSorted('a.Clientcount') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Clientcount', 'a.clientCount') }}</th>
                    <th{% if entities.isSorted('a.Jobcount') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Jobcount', 'a.jobCount') }}</th>
                    <th{% if entities.isSorted('a.Profilcount') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Profilcount', 'a.profilCount') }}</th>
                    <th{% if entities.isSorted('a.Talkcount') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Talkcount', 'a.talkCount') }}</th>
                    <th{% if entities.isSorted('a.Collaboratorcount') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Collaboratorcount', 'a.collaboratorCount') }}</th>
                    <th{% if entities.isSorted('a.Agencycount') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Agencycount', 'a.agencyCount') }}</th>
                    <th{% if entities.isSorted('a.Hourstalkcount') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Hourstalkcount', 'a.hourstalkCount') }}</th>
                    <th{% if entities.isSorted('a.Hoursphonecount') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Hoursphonecount', 'a.hoursphoneCount') }}</th>
                    <th{% if entities.isSorted('a.Yearfounded') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Yearfounded', 'a.yearFounded') }}</th>
                    <th>{{ 'views.index.actions'|trans({}, 'MWSimpleCrudGeneratorBundle') }}</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('agence_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.contactEmail }}</td>
                    <td>{{ entity.twitterLink }}</td>
                    <td>{{ entity.facebookLink }}</td>
                    <td>{{ entity.linkedinLink }}</td>
                    <td>{{ entity.clientCount }}</td>
                    <td>{{ entity.jobCount }}</td>
                    <td>{{ entity.profilCount }}</td>
                    <td>{{ entity.talkCount }}</td>
                    <td>{{ entity.collaboratorCount }}</td>
                    <td>{{ entity.agencyCount }}</td>
                    <td>{{ entity.hourstalkCount }}</td>
                    <td>{{ entity.hoursphoneCount }}</td>
                    <td>{% if entity.yearFounded %}{{ entity.yearFounded|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        
        
                    <a class="glyphicon glyphicon-search tooltips"  href="{{ path('agence_show', { 'id': entity.id }) }}" title="" rel="tooltip" data-original-title="{{ 'views.actions.show'|trans({}, 'MWSimpleCrudGeneratorBundle') }}">

            </a>
                
        
                    <a class="glyphicon glyphicon-edit tooltips"  href="{{ path('agence_edit', { 'id': entity.id }) }}" title="" rel="tooltip" data-original-title="{{ 'views.actions.edit'|trans({}, 'MWSimpleCrudGeneratorBundle') }}">

            </a>
                                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>

    <div class="col-lg-4 navigation">
        {{ knp_pagination_render(entities) }}
    </div>

        <div class="col-lg-8">
        <a class="btn btn-primary likepaginator" href="{{ path('agence_new') }}">
            {{ 'views.index.createnew'|trans({}, 'MWSimpleCrudGeneratorBundle') }} Site
        </a>
    </div>
    </div>
        
{% endblock %}


{% block javascript %}
<script type="text/javascript">
$('.tooltips').tooltip();
</script>
{% endblock %}
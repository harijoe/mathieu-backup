{% extends 'ArdemisMainBundle::base_sass.html.twig' %}

{% block title %}
    {{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Client'}, 'ArdemisMainBundle') }}
{% endblock %}

{% block content -%}

    <div class="well well-lg">
        <h1>{%trans%}Client{%endtrans%}</h1>

        <form class="form-horizontal">
            <fieldset>
                <div class="form-group">
                    <label class="control-label">Id</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.id }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">companyName</label>

                    <div class="form-control"><span class="input-xlarge uneditable-input">{{ entity.companyName }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">Activity</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.activity }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">Address</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.address }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">Zipcode</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.zipcode }}</span></div>
                </div>
                <div class="form-group">
                    <label class="control-label">City</label>

                    <div class="form-control"><span
                                class="input-xlarge uneditable-input">{{ entity.City }}</span></div>
                </div>
            </fieldset>
        </form>
    </div>    
    
    
    <div class="col-lg-9">
        <div class="float-left col-lg-3">
            <a class="btn btn-info col-lg-11" href="{{ path('client') }}">
                {{ 'views.recordactions.backtothelist'|trans({}, 'ArdemisMainBundle') }}
            </a>
        </div>
        <div class="float-left col-lg-3">
            <a class="btn btn-primary col-lg-11" href="{{ path('client_edit', { 'id': entity.id }) }}">
                {{ 'views.recordactions.edit'|trans({}, 'ArdemisMainBundle') }}
            </a>
        </div>
        <div class="float-left col-lg-3">{{ form(delete_form) }}</div>
    </div>
{% endblock %}